{% include 'head.html' %}
{% include 'header.html' %}

<section id="main-content">
  <article class="available-courses">
    <header>
      <hgroup>
        <h1>Available Assignments</h1>    
      </hgroup>
    </header>
    <section class="available-courses">
          {% for assignment in assignments %}
            <article class="available-course" style="display: block; clear: both;">
              <div class="stassignment-icon" style="float:left;">
                <a href="" onclick="postvar('assignment = {{assignment['assignment_']}}')">{<button class="btn btn-primary icon-pencil"/></a>
              </div> 
              <div class="stassignment-details" style="float: left;">
                <p><a href="/question-part1" onclick="postvar('assignment = {{assignment['assignment_']}}')">{{assignment['name']}}</a></p> 
                <p><span class="moredetails">Course: course name {{assignment['course']}} | Prof: professor name {{assignment['professor']}}</span></p>
              </div>
              <div class="clear"></div>
            </article>
          {% endfor %}           
          <div class="clear"></div>
    </section>
  </article>
</section>
<script>
function postvar(indata){
$.ajax({
    type: 'post',
    url: '/question-part1',
    data: indata,
    success: function(response) {
        alert(response);
    }
});

return false;
}
</script>

