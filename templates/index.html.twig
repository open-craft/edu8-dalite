{% include 'head.html' %}
{% include 'header.html' %}

<section id="main-content">

	<section id="login">
		<h1>Login</h1>

		<form action="/question-part1" method="POST" class="form">
			<fieldset>
				
				<div class="aligner">
                                            LANDING
                                </div>
				
				<div class="clear"></div>

				<div class="button_div">
                    {% for assignment in assignments %}
					<input type="submit" name="assignment" value="{{assignment['assignment_']}}" class="btn btn-primary">{{assignment['name']}} </input>
                    {% endfor %}
                                </div>
				<div class="clear"></div>
			</fieldset>
		</form>


	</section>

</section>





    <section id="main-content">
      <article class="{{ class }}">
        <header>
          <hgroup>
            <h1>Available Assignments</h1>
            <h2>&nbsp;</h2>        
          </hgroup>
        </header>
        <section class="question">
          {% for assignment in assignments %}
          <div class="stassignment">
            <div class="stassignment-icon" style="float:left;">
              <input type="submit" name="assignment" value="{{assignment['assignment_']}}" class="btn btn-primary"><i class="icon-pencil"></i></input>
            </div> 
            <div class="stassignment-details" style="float: left;">
              <h3 style="margin:0;padding:0;"><a href="{{assignment['assignment_']}}">{{assignment['name']}}</a></h3> 
              <p style="margin:0;padding:0;">Course: course name {{assignment['course']}} | Prof: professor name {{assignment['professor']}}</p>
            </div>
          </div>
          {% endfor %}           
          <div class="clear"></div>
        </section>

  </article>
</section>

