{% include 'head.html' %}
{% include 'header.html' %}

<section id="main-content">

	<section id="login">
		<h1>You are logged out!</h1>
                
                <p><a href="">Click here to login again</a></p>

		<form action="/" method="POST" class="form">
			<fieldset>
				
				<div class="aligner">
					<label for="username" class="fLeft">Username</label>
					<div class="div_text">
						<div class="input-prepend">
							<span class="add-on"><i class="icon-user"></i></span>
							<input name="log" type="text" id="log inputIcon" value="" class="username span2" />
						</div>
					</div>

					<div class="clear"></div>
					
					<label for="password" class="fLeft">Password</label>
					<div class="div_text">
						<div class="input-prepend">
							<span class="add-on"><i class="icon-lock"></i></span>
							<input name="pwd" type="password" id="pwd inputIcon" class="password span2" />
						</div>
					</div>
				</div>
				
				<div class="clear"></div>

				<div class="button_div">
					<input name="rememberme" type="checkbox" id="rememberme" value="forever" />&nbsp;Remember me&nbsp;&nbsp;<input type="submit" value="Login" class="btn btn-primary" />
                                </div>
				<div class="clear"></div>
			</fieldset>
		</form>


	</section>

</section>

<footer id="main-footer"></footer>

</body>
</html>
