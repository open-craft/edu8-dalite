{% include 'head.html' %}

{% include 'header.html' %}

<section id="main-content">
  <article class="question">
    <header>
      <hgroup>			
        <h1>Question  {{ question_num }}</h1>
        <h2>{{ question[0]['title'] }}  <!--note it would be good to put prof name here in next iteration--></h2>
      </hgroup>
    </header>

    <section class="question">
      <div class="img-upload">
        {% if media1['type'] == 'jpeg'  %}
            <img src="https://edu8.ca/trunk/img-uploads/{{ media1['data'] }}" alt="Image Upload" />
          {% elseif media1['type'] == 'youtube'  %}
            <iframe width="420" height="315" src="http://www.youtube.com/embed/{{ media1['data'] }}" frameborder="0" allowfullscreen></iframe>
          {% else  %}
            <p>no image or video</p>
        {% endif %}
      </div>

      <div class="answer-form">
        <form class="form-horizontal">
          <fieldset>
            <div class="control-group">
              <p>1. Check the corresponding elements that you thought were important in answering the question:</p>
              
              <!-- loop generates a list of concepts with check box defined in assignment_concepts -->
              {% for concept in question[question_num-1]['concepts'] %}
                <label class="checkbox">
                  <input type="checkbox" name="optionsCheckboxList1" value="option1">
                    {{ concept }}	
                </label>
              {% endfor %}
            </div>
          </fieldset>
        </form>
        <a href="/question-part2"><button class="btn btn-primary next-page">Next page&nbsp;&raquo;</button></a>
      </div>
      <div class="clear"></div>
    </section>

  </article>
</section>
